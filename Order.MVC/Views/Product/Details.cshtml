@model Order.MVC.Models.ProductEntity

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes do Produto</h1>

<div class="card">
    <div class="card-header">
        <h5>@Model.Title</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <h6>Informações Básicas</h6>
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8">@Model.Title</dd>
                    
                    <dt class="col-sm-4">Preço:</dt>
                    <dd class="col-sm-8">@Model.Value.ToString("C")</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h6>Descrição</h6>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Excluir
                </a>
            </div>
        </div>
    </div>
</div>
